void Move(Input* in)
{
  SDL_Event event;
  while(SDL_PollEvent(&event))
    {
      switch (event.type)
	{
	case SDL_KEYDOWN:
	  in->key[event.key.keysym.sym]=1;
	  break;
	case SDL_KEYUP:
	  in->key[event.key.keysym.sym]=0;
	  break;
	case SDL_KEYLEFT:
	  in->key[event.key.keysym.sym]=2;
	  break;
	case SDL_KEYRIGHT:
	  in->key[event.key.keysym.sym]=3;
	  break;
	default:
	  break;
	}
    }
}


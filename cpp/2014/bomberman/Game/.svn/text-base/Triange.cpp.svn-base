  void Triangle::draw(void)
  {
    glBegin(GL_TRIANGLES);

    glColor3f(1.0f, 0.50f, 0.75f);

    /// Vertex haut
    glVertex3f(0.0f, 150.0f, 0.0f);
    /// Vertex bas gauche
    glVertex3f(-150.0f, 0.0f, 0.0f);
    /// Vertex bas droit
    glVertex3f(150.0f, 00.0f, 0.0f);
    
    glEnd();
  }
